$(BTC_T)/BotClient2.class : $(BTC_S)/BotClient2.java $(MH_T)/MySQLHandler.class
	$(JCC) $(JFLAGS) -cp .:$(GsonJar):$(MySQKJar)/BotClient $(BTC_S)/BotClient2.java

